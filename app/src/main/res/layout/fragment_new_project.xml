<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/fragment_new_project"
    android:paddingLeft="@dimen/fragment_new_project_padding_start"
    android:paddingStart="@dimen/fragment_new_project_padding_start"
    android:paddingRight="@dimen/fragment_new_project_padding_end"
    android:paddingEnd="@dimen/fragment_new_project_padding_end"
    android:paddingBottom="@dimen/fragment_new_project_padding_bottom"
    android:minWidth="@dimen/dialog_fixed_width_minor"
    >

    <TextView
        android:id="@+id/fragment_new_project_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fragment_new_project_description"
        />

    <EditText
        android:id="@+id/fragment_new_project_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/fragment_new_project_name_hint"
        android:textSize="@dimen/fragment_new_project_name_text_size"
        android:layout_marginTop="5dp"
        />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/fragment_new_project_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_new_project_cancel"
            android:layout_marginTop="10dp"
            android:layout_marginRight="18dp"
            android:layout_marginEnd="18dp"
            android:padding="5dp"
            android:layout_toLeftOf="@+id/fragment_new_project_create"
            android:layout_toStartOf="@+id/fragment_new_project_create"
            android:textColor="@color/accent"
            android:textStyle="bold"
            android:textAllCaps="true"
            />

        <TextView
            android:id="@+id/fragment_new_project_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_new_project_create"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="@color/accent"
            android:textStyle="bold"
            android:textAllCaps="true"
            />
    </RelativeLayout>
</LinearLayout>