<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="25dp"
    android:paddingStart="25dp"
    android:paddingRight="25dp"
    android:paddingEnd="25dp"
    android:paddingBottom="20dp"
    android:minWidth="@dimen/dialog_fixed_width_minor">

    <TextView
        android:id="@+id/fragment_new_project_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fragment_new_project_description" />

    <EditText
        android:id="@+id/fragment_new_project_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/fragment_new_project_name_hint"
        android:textSize="14dp"
        android:layout_marginTop="5dp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <com.cengalabs.flatui.views.FlatButton
            android:id="@+id/fragment_new_project_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_new_project_cancel"
            flatui:fl_blockButtonEffectHeight="3dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <com.cengalabs.flatui.views.FlatButton
            android:id="@+id/fragment_new_project_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_new_project_create"
            flatui:fl_theme="@array/grass"
            flatui:fl_blockButtonEffectHeight="3dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</LinearLayout>