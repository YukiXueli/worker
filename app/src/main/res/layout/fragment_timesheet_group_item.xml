<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    >

    <RelativeLayout
        android:id="@+id/fragment_timesheet_group_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="20dp"
        android:paddingStart="20dp"
        android:paddingRight="20dp"
        android:paddingEnd="20dp"
        android:theme="@style/ExpandableGroupItem"
        >

        <TextView
            android:id="@+id/fragment_timesheet_group_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Monday (March 9th)"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/fragment_timesheet_group_item_summarize"
            android:layout_toStartOf="@+id/fragment_timesheet_group_item_summarize"
            android:theme="@style/ExpandableGroupItem.Title"
            />

        <TextView
            android:id="@+id/fragment_timesheet_group_item_summarize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="8.35"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:theme="@style/ExpandableGroupItem.Summarize"
            />

    </RelativeLayout>

</FrameLayout>