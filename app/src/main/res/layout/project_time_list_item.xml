<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/project_time_list_item"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="15dp"
    android:paddingStart="15dp"
    android:paddingRight="15dp"
    android:paddingEnd="15dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/project_time_list_item_start"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:text="07:30"
        android:padding="5dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/project_time_list_item_stop"
        android:layout_toRightOf="@+id/project_time_list_item_start"
        android:layout_toEndOf="@+id/project_time_list_item_start"
        android:text="09:30"
        android:padding="5dp" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/project_time_list_item_summarize"
        android:layout_toRightOf="@+id/project_time_list_item_stop"
        android:layout_toEndOf="@+id/project_time_list_item_stop"
        android:text="2h 0m"
        android:padding="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="end|right"/>
</RelativeLayout>