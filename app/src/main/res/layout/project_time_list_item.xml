<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="25dp"
    android:paddingStart="25dp"
    android:paddingRight="25dp"
    android:paddingEnd="25dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:id="@+id/project_time_list_item">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/project_time_list_item_start"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:text="07:30" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/project_time_list_item_stop"
            android:layout_toRightOf="@+id/project_time_list_item_start"
            android:layout_toEndOf="@+id/project_time_list_item_start"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:text="09:30" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/project_time_list_item_summarize"
            android:layout_toRightOf="@+id/project_time_list_item_stop"
            android:layout_toEndOf="@+id/project_time_list_item_stop"
            android:text="2h 0m"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:gravity="end|right"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp" />
    </RelativeLayout>
</LinearLayout>