<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="25dp"
    android:paddingStart="25dp"
    android:paddingRight="25dp"
    android:paddingEnd="25dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:id="@+id/project_time_list_item">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/project_time_list_item_date"
        android:text="@string/placeholder_project_time_list_item_date" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/project_time_list_item_start"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:text="@string/placeholder_project_time_list_item_start" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/project_time_list_item_stop"
            android:layout_toRightOf="@+id/project_time_list_item_start"
            android:layout_toEndOf="@+id/project_time_list_item_start"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:text="@string/placeholder_project_time_list_item_stop" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/project_time_list_item_summarize"
            android:layout_toRightOf="@+id/project_time_list_item_stop"
            android:layout_toEndOf="@+id/project_time_list_item_stop"
            android:text="@string/placeholder_project_time_list_item_summarize"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:gravity="end|right"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp" />
    </RelativeLayout>
</LinearLayout>